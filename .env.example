# =======================================================
# Dianping Microservices Configuration
# =======================================================

# -------------------------------------------------------
# Data Directory Configuration
# -------------------------------------------------------
# Where to store all persistent data (MySQL, Redis, etcd, Prometheus, Grafana, Jaeger)
# Default: /var/lib/dianping
#
# The start.sh script will automatically create subdirectories:
#   - ${DATA_DIR}/mysql
#   - ${DATA_DIR}/redis
#   - ${DATA_DIR}/etcd
#   - ${DATA_DIR}/prometheus
#   - ${DATA_DIR}/grafana
#   - ${DATA_DIR}/jaeger
#
# Examples:
#   DATA_DIR=/var/lib/dianping           # Default (requires root or proper permissions)
#   DATA_DIR=/data/dianping              # For servers with separate data partition
#   DATA_DIR=/home/user/dianping-data    # For non-root users
#   DATA_DIR=$HOME/dianping-data         # Using home directory
DATA_DIR=/var/lib/dianping

# -------------------------------------------------------
# MySQL Configuration
# -------------------------------------------------------
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=hmdp
MYSQL_HOST=mysql
MYSQL_PORT=3306

# -------------------------------------------------------
# Redis Configuration
# -------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# -------------------------------------------------------
# etcd Configuration
# -------------------------------------------------------
ETCD_HOST=etcd
ETCD_PORT=2379

# -------------------------------------------------------
# Timezone
# -------------------------------------------------------
TZ=Asia/Shanghai

# -------------------------------------------------------
# Grafana Configuration
# -------------------------------------------------------
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# -------------------------------------------------------
# Jaeger Configuration
# -------------------------------------------------------
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# -------------------------------------------------------
# Application Environment
# -------------------------------------------------------
APP_ENV=development
APP_DEBUG=true

# -------------------------------------------------------
# Log Level (debug, info, warn, error)
# -------------------------------------------------------
LOG_LEVEL=info

# -------------------------------------------------------
# Service Ports (for reference, actual ports defined in docker-compose.yml)
# -------------------------------------------------------
USER_RPC_PORT=8001
SHOP_RPC_PORT=8002
VOUCHER_RPC_PORT=8003
ORDER_RPC_PORT=8004
BLOG_RPC_PORT=8005
API_PORT=8081

# -------------------------------------------------------
# Monitoring Ports
# -------------------------------------------------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
JAEGER_UI_PORT=16686

